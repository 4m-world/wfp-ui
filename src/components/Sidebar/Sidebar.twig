<div class="wfp--theme-light wfp--theme-en">
  <div style="display:flex;height:100vh;flex-direction:column">
    <div class="wfp--main-navigation">
      <div class="wfp--wrapper wfp--wrapper--width-mobile-full wfp--main-navigation__wrapper">
        <div class="wfp--main-navigation__logo-wrapper"><button tabindex="0" class="wfp--main-navigation__button wfp--btn wfp--btn--primary" type="button">Menu</button>
          <div class="wfp--main-navigation__logo">WFP</div>
        </div>
        <ul class="wfp--main-navigation__list"></ul>
      </div>
    </div>
    <div class="wfp--sidebar-content__container">
      <div class="wfp--sidebar-item-content">
        <div class="wfp--sidebar-content__header">
      
          <div class="wfp--form-item wfp--form-item--invalid wfp--number wfp--search wfp--search--lg"><label for="" class="wfp--label wfp--visually-hidden"></label>
            <div class="wfp--input-wrapper wfp--search-input__wrapper"><svg class="wfp--search-magnifier" fill-rule="evenodd" height="16" viewBox="0 0 16 16" width="16" aria-label="Provide a description that will be used as the title" alt="Provide a description that will be used as the title">
                <title>Provide a description that will be used as the title</title>
                <path d="M11.435 10.063h-.728l-.251-.252a5.89 5.89 0 001.437-3.865 5.946 5.946 0 10-5.947 5.947 5.91 5.91 0 003.865-1.432l.252.251v.723L14.637 16 16 14.637l-4.565-4.574zm-5.489 0a4.117 4.117 0 110-8.234 4.117 4.117 0 010 8.234z"></path>
              </svg><input type="text" class="wfp--search-input" /><button class="wfp--search-close wfp--search-close--hidden" type="button"><svg fill-rule="evenodd" height="16" viewBox="0 0 16 16" width="16" aria-label="Provide a description that will be used as the title" alt="Provide a description that will be used as the title">
                  <title>Provide a description that will be used as the title</title>
                  <path d="M8 0C3.6 0 0 3.6 0 8s3.6 8 8 8 8-3.6 8-8-3.6-8-8-8zm3.5 10.1l-1.4 1.4L8 9.4l-2.1 2.1-1.4-1.4L6.6 8 4.5 5.9l1.4-1.4L8 6.6l2.1-2.1 1.4 1.4L9.4 8l2.1 2.1z"></path>
                </svg></button>
            </div>
          </div>
        </div>
        {% if items %}
        {% for item in items %}
        <div class="wfp--item wfp--item--horizontal wfp--item--sidebar">
          <div class="wfp--item__content">
            <div class="wfp--item__title-wrapper">
              <h2 class="wfp--item__title">A title is shown</h2>
              <div class="wfp--item__additional">Yesterday</div>
            </div>
            <div class="wfp--item__text-wrapper">
              <div>
                <div class="wfp--item__sub-content">subcontent</div>
              </div>
              <div class="wfp--item__right">
                <div class="wfp--item__hint"><span class="wfp--tag wfp--tag--info" kind="wfp">Hint</span></div>
              </div>
            </div>
          </div>
        </div>
        {% endfor %}
        {% endif %}
      </div>
      <div id="scroll-container" class="wfp--content-section">
        <div class="wfp--empty wfp--empty--large">
          <div class="wfp--empty__icon"></div>
          <div class="wfp--empty__text">
            <h2>{{emptyContentTitle}}</h2>
            <p>{{emptyContent}}</p>
          </div>
          <div class="wfp--empty__button"></div>
        </div>
      </div>
    </div>
  </div>
</div>